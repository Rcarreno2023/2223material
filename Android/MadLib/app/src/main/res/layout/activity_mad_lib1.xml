<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".madLib1">

    <EditText
        android:id="@+id/adjective1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Adjective"
        android:textColorHint="#fff"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="7dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/adjective2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Adjective"
        android:textColorHint="#fff"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/adjective1"
        tools:layout_editor_absoluteX="111dp"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/adjective3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Adjective"
        android:textColorHint="#fff"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/adjective2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/Name1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Name of a female Person"
        android:inputType="textPersonName"
        android:textColorHint="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adjective3" />

    <Button
        android:id="@+id/enterBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:text="Enter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verb" />

    <EditText
        android:id="@+id/name2"
        android:layout_width="411dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Name of a male Person"
        android:textColorHint="#fff"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Name1" />

    <EditText
        android:id="@+id/noun"
        android:layout_width="411dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Noun"
        android:inputType="textPersonName"
        android:textColorHint="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name2" />

    <EditText
        android:id="@+id/Occupaion1"
        android:layout_width="411dp"
        android:layout_height="44dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Occupation #1"
        android:inputType="textPersonName"
        android:textColorHint="#fff"
        app:layout_constraintTop_toBottomOf="@+id/noun"
        tools:layout_editor_absoluteX="-1dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Occupaion2"
        android:layout_width="413dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Occupation #2"
        android:inputType="textPersonName"
        android:textColorHint="#fff"
        app:layout_constraintTop_toBottomOf="@+id/Occupaion1"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/partOfBody"
        android:layout_width="413dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="Part of body"
        android:inputType="textPersonName"
        android:textColorHint="#fff"
        app:layout_constraintTop_toBottomOf="@+id/Occupaion2"
        tools:layout_editor_absoluteX="-1dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/verb"
        android:layout_width="411dp"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="Verb Ending in ING"
        android:inputType="textPersonName"
        android:textColorHint="#fff"
        app:layout_constraintTop_toBottomOf="@+id/partOfBody"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="InvalidId" />

</androidx.constraintlayout.widget.ConstraintLayout>